@model Shop.Models.RoleAssignmentViewModel

@{
    ViewData["Title"] = "Assign Role";
}

<h1>Assign Role</h1>

<form asp-action="Assign" method="post">
    <div class="form-group">
        <label asp-for="SelectedUserId">User</label>
        <select asp-for="SelectedUserId" class="form-control" asp-items="@(new SelectList(Model.Users, "Id", "UserName"))"></select>
    </div>
    <div class="form-group">
        <label asp-for="SelectedRoleId">Role</label>
        <select asp-for="SelectedRoleId" class="form-control" asp-items="@(new SelectList(Model.Roles, "Id", "Name"))"></select>
    </div>
    <button type="submit" class="btn btn-primary">Assign Role</button>
</form>
